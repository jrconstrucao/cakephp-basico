<?php

class Palestra extends AppModel {
    public $useTable = 'palestras';
    
    public $belongsTo = array('Palestrante');

    public $order = array('inicio' => 'ASC');

    public $validate = array(
    	'nome' => array(
          array(
      			'rule' => 'notEmpty',
            'message'=>'Campo vazio'	
    			),
          array(
      			'rule' => 'isUnique',
            'message'=>'Esta Palestra j치 est치 em uso'	
    			)
      ),
      'inicio' => array (
          'rule' => '/([0-9]+):([0-9]+)/',
          'message'=>'A hora dever치 ser no formato hh:mm'
      
      ),
      'fim' => array (
          'rule' => '/([0-9]+):([0-9]+)/',
          'message'=>'A hora dever치 ser no formato hh:mm'
      
      )
		);
}

?>
